.movie-detail {
    width: 100%;
    min-height: 100%;
    background-color: #efefef;
    padding: 15% 5% 8%;
    box-sizing: border-box;
}
.movie-detail .inner-wrapper {
    width: 100%;
    min-height: 100%;
    background-color: #fff;
    border: 1px solid #ddd;
    position: relative;
    padding-top: 350rpx;
    box-sizing: border-box;
}
.inner-wrapper .movie-img {
    width: 240rpx;
    height: 360rpx;
    position: absolute;
    top: -50rpx;
    left: 50%;
    margin-left: -120rpx;
}
.inner-wrapper .movie-title {
   font-size: 32rpx;
   width: 100%;
   text-align: center;
   margin-bottom: 40rpx; 
}
.inner-wrapper .movie-comment {
    width: 80%;
    margin: 0 auto;
    font-size: 28rpx;
    /* text-align: center; */
    color: #666;
    min-height: calc(100% - 400rpx);
}
.inner-wrapper .bottom {
    /* position: absolute; */
    /* bottom: 40rpx; */
    width: 100%;
    display: flex;
    justify-content: space-evenly;
    margin: 40rpx 0;
}
.bottom .left-btn, .bottom .right-btn {
    padding: 10rpx 20rpx;
    /* height: 72rpx; */
    /* line-height: 72rpx; */
    text-align: center;
    color:#6E87A0;
    border: 1px solid #ddd;
    font-size: 24rpx;
    border-radius: 10rpx;
}
.left-img, .right-img {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
    vertical-align: middle;
}