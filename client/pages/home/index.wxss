.home-container {
    width: 100%;
    height: 100%;
    background-color: #efefef;
    box-sizing: border-box;
    padding-top: 50rpx;
    color: #333;
}
.home-container .img {
    display: block;
    width: 70%;
    height: 70%;
    margin: 0 auto;
}
.home-container .title {
    display: inline-block;
    width: 100%;
    text-align: center;
    font-size: 32rpx;
    font-weight: 500;
    line-height: 1.5;
    margin: 40rpx 0;
}
.home-container .recommend {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.recommend .photo {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}
.recommend .text {
    font-size: 28rpx;
}
.bottom {
    position: fixed;
    bottom: 0;
    display: flex;
    width: 100%;
    background-color: #fff;
    border-top: 1px solid #ddd;
}
.bottom .leftBtn, .bottom .rightBtn {
    flex: 1;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    color: #888;
    font-size: 28rpx;
}
.bottom .leftBtn {
    border-right: 1rpx solid #ddd;
}
.hot-img, .user-img {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
    vertical-align: text-bottom;
}