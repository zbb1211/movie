.user {
    width: 100%;
    height: 100%;
    background-color: #efefef;
}
.user .top-menu {
    display: flex;
    background: #fff;
}
.top-menu .leftBtn, .top-menu .rightBtn {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    color: #888;
    text-align: center;
}
.top-menu .leftBtn.current {
    color: #F5A482;
    border-bottom: 1px solid #F5A482;
}
.bottom {
    position: fixed;
    bottom: 0;
    border-top: 1px solid #ddd;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #888;
    background-color: #fff;
}