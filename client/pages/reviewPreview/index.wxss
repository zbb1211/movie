.review-detail {
    width: 100%;
    height: 100%;
    background-color: #efefef;
    padding: 15% 5% 8%;
    box-sizing: border-box;
}
.review-detail .inner-wrapper {
    width: 100%;
    height: 100%;
    background-color: #fff;
    border: 1px solid #ddd;
    position: relative;
    padding-top: 350rpx;
    box-sizing: border-box;
}
.inner-wrapper .movie-img {
    width: 240rpx;
    height: 360rpx;
    position: absolute;
    top: -50rpx;
    left: 50%;
    margin-left: -120rpx;
}
.inner-wrapper .movie-title {
   font-size: 32rpx;
   width: 100%;
   text-align: center;
   margin-bottom: 40rpx; 
}
.inner-wrapper .movie-comment {
    width: 80%;
    margin: 0 auto;
    font-size: 28rpx;
    /* text-align: center; */
    color: #666;
}
.movie-comment .user {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-bottom: 20rpx;
}
.user .user-img {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}
.user .user-comment {
    width: 100%;
}
.inner-wrapper .bottom {
    position: absolute;
    bottom: 40rpx;
    width: 100%;
    display: flex;
    justify-content: space-evenly;
}
.bottom .left-btn, .bottom .right-btn {
    width: 200rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    color:#6E87A0;
    border: 1px solid #ddd;
    font-size: 24rpx;
    border-radius: 10rpx;
}