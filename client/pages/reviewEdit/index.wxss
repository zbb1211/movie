.review-edit {
    width: 100%;
    min-height: 100%;
    background-color: #efefef;
    padding: 15% 5% 100rpx;
    box-sizing: border-box;
    position: relative;
}
.review-edit .inner-wrapper {
    width: 100%;
    min-height: calc(85vh - 100rpx);
    background-color: #fff;
    border: 1px solid #ddd;
    padding-top: 350rpx;
    box-sizing: border-box;
}
.inner-wrapper .movie-img {
    width: 240rpx;
    height: 360rpx;
    position: absolute;
    top: 50rpx;
    left: 50%;
    margin-left: -120rpx;
}
.inner-wrapper .movie-title {
   font-size: 32rpx;
   width: 100%;
   text-align: center;
   margin-bottom: 40rpx; 
}
.inner-wrapper .movie-comment {
    width: 80%;
    margin: 0 auto;
    font-size: 28rpx;
    /* text-align: center; */
    color: #666;
}
.audio-btn {
    width: 40%;
    font-size: 28rpx;
    margin: 100rpx auto;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border: 1rpx solid #ddd;
    border-radius: 10rpx;
}
.user-info {
  display: flex;
  width: 100%;
  height: 80rpx;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  padding-left: 40rpx;
}
.user-image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 40rpx;
}
.wrapper .movie-comment {
    width: 100%;
    min-height: 200rpx;
    padding-left: 160rpx;
    padding-right: 40rpx;
    box-sizing: border-box;
}
.bottom {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    background-color: #0EB400;
}
.bottom.disabled {
    background-color: #0EB400;
    opacity: 0.5;
}
.footer {
    display: flex;
    width: 100%;
    margin: 40rpx 0;
    justify-content: space-evenly;
}
.footer .footer-left,
.footer .footer-right {
    padding: 16rpx 40rpx;
    border: 1px solid #ddd;
    color: #666;
    border-radius: 10rpx;
    font-size: 24rpx;
}
.left-img, .right-img {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
    vertical-align: text-bottom;
}

.audio {
    width: 50%;
    height: 60rpx;
    background-color: #dbe2e8;
    padding-left: 20rpx;
    box-sizing: border-box;
    border: 1px solid #ddd;
    display: flex;
    align-items: center;
    font-size: 24rpx;
    margin-left: 15%;
  }
  .audio .play-image {
    width: 40rpx;
    height: 40rpx;
    margin-top: 10rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
  }