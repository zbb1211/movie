.review-edit {
    width: 100%;
    height: 100%;
    background-color: #efefef;
    padding: 15% 5% 100rpx;
    box-sizing: border-box;
    position: relative;
}
.review-edit .inner-wrapper {
    width: 100%;
    height: 100%;
    background-color: #fff;
    border: 1px solid #ddd;
    padding-top: 350rpx;
    box-sizing: border-box;
}
.inner-wrapper .movie-img {
    width: 240rpx;
    height: 360rpx;
    position: absolute;
    top: 50rpx;
    left: 50%;
    margin-left: -120rpx;
}
.inner-wrapper .movie-title {
   font-size: 32rpx;
   width: 100%;
   text-align: center;
   margin-bottom: 40rpx; 
}
.inner-wrapper .movie-comment {
    width: 80%;
    margin: 0 auto;
    font-size: 28rpx;
    /* text-align: center; */
    color: #666;
}
.bottom {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    background-color: #0EB400;
}